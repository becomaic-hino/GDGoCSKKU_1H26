    <!-- Chart Logic -->
    <script>
        // --- Shared Config ---
        Chart.defaults.font.family = "'Noto Sans KR', sans-serif";
        Chart.defaults.color = '#4B5563';

        const tooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    return Array.isArray(label) ? label.join(' ') : label;
                }
            }
        };

        function splitLabel(label) {
            if (typeof label !== 'string' || label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];
            for (let i = 1; i < words.length; i++) {
                if ((currentLine + ' ' + words[i]).length <= 16) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- Chart 1: Curriculum Balance (Doughnut) ---
        new Chart(document.getElementById('balanceChart'), {
            type: 'doughnut',
            data: {
                labels: ['Cloud Infra', 'App Dev', 'AI Eng', 'Admin/Foundation'].map(splitLabel),
                datasets: [{
                    data: [30, 30, 20, 20],
                    backgroundColor: ['#6366F1', '#EC4899', '#10B981', '#F59E0B'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'right' }, tooltip: tooltipConfig },
                cutout: '70%'
            }
        });

        // --- Chart 2: Monthly Pulse (Bar) ---
        new Chart(document.getElementById('pulseChart'), {
            type: 'bar',
            data: {
                labels: ['Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Intensity',
                    data: [3, 8, 4, 7, 4, 3, 3, 6, 2, 8, 3], // Estimated
                    backgroundColor: (ctx) => ctx.raw >= 7 ? '#EC4899' : '#6366F1',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { x: { grid: { display: false } }, y: { beginAtZero: true } },
                plugins: { legend: { display: false }, tooltip: tooltipConfig }
            }
        });

        // --- Chart 3: Tech Depth (Line) ---
        new Chart(document.getElementById('curveChart'), {
            type: 'line',
            data: {
                labels: ['Feb', 'Mar', 'Apr', 'May', 'Jun', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Complexity Level',
                    data: [10, 30, 50, 65, 70, 75, 75, 95, 100],
                    borderColor: '#10B981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { x: { grid: { display: false } }, y: { beginAtZero: true, max: 100 } },
                plugins: { legend: { display: false }, tooltip: tooltipConfig }
            }
        });
    </script>
</body>
